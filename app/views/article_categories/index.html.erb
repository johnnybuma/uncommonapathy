<div class="row row_down">
  <div class="col-md-6 col-md-offset-3">
    <div class="col-md-12">
      <h1>Article Categories</h1>
      <hr>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @article_categories.each do |article_category| %>
              <tr>
                <td><%= article_category.name %></td>
                <td><%= link_to 'Show', article_category, class: 'btn btn-default btn-xs' %></td>
                <td><%= link_to 'Edit', edit_article_category_path(article_category), class: 'btn btn-warning btn-xs' %></td>
                <td><%= link_to 'Destroy', article_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>


      <br>

      <%= link_to 'New Article Category', new_article_category_path, class: 'btn btn-primary btn-sm' %>

    </div>
  </div>
</div>
