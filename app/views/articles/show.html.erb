
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= link_to @article.image.url do %>
        <%= image_tag(@article.image.url) %>
    <% end %>  </p>

  <p>
    <strong>Subtitle:</strong>
    <%= @article.subtitle %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= @article.slug %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @article.body.html_safe %>
  </p>

  <p>
    <strong>Keyword:</strong>
    <%= @article.keyword %>
  </p>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>


