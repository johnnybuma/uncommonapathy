<div class="form-group">
  <%= content_tag(:label) do %>

      <% if user_signed_in? %>
        <% unless current_user.voted_for?(@poll) %>
            <%= radio_button_tag 'vote_option[id]', option.id %>
        <% end %>
      <% end %>
      <%= option.title %>
  <% end %>
  <%= visualize_votes_for option %>

</div>